{
  "name": "review-app",
  "version": "0.1.0",
  "private": true,
  "description": "A code review platform for stacked pull requests",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@review-app/backend",
    "dev:frontend": "npm run dev --workspace=@review-app/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@review-app/backend",
    "build:frontend": "npm run build --workspace=@review-app/frontend",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
